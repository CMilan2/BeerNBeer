<div class="container vh-100 d-flex flex-column justify-content-center max-width-400">
  <h2 class="bebas text-uppercase mb-3">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mb-0">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { class: "py-1 rounded-4", autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { class: "py-1 rounded-4", autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn cus-btn-primary-light py-1 w-100 rounded-4"%>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
