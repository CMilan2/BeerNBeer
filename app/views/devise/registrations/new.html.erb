<div class="container d-flex flex-column justify-content-center w-70 vh-100">
  <h2 class="bebas text-uppercase mb-3">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <div class="form-inputs d-flex gap-3">
        <div class="w-50">
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { class: "py-1 rounded-4", autocomplete: "first_name" }%>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      input_html: { class: "py-1 rounded-4", autocomplete: "last_name" }%>
          <%= f.input :birth_date,
                      required: true,
                      autofocus: true,
                      input_html: { class: "py-1 rounded-4", autocomplete: "birth_date" }%>
        </div>
        <div class="w-50">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { class: "py-1 rounded-4", autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "py-1 rounded-4", autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { class: "py-1 rounded-4", autocomplete: "new-password" } %>
        </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class:"btn cus-btn-primary-light py-1 w-100 rounded-4 mt-3" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  <p class="mb-0 sm"><em>already an account ?</em></p>
</div>
