<div class="container mt-3">
  <h1>All beers</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @beers.each do |beer| %>
    <div class="col">
      <div class="card h-100">
        <%= cl_image_tag beer.photo.key, width: 400, height: 400, class: " bg-white p-5 card-img-top object-fit-contain"%>
        <div class="card-body">
          <h5 class="card-title"> <%= beer.name %> </h5>
          <p class="card-title"> <em><%= beer.centiliter %>cl</em></p>
            <div class="d-flex justify-content-between align-items-center">
            <p class="card-title mb-0"><b><%= beer.unit_price %> â‚¬</b></p>
            <%= link_to "See more", beer_path(beer), class: "btn btn-outline-success" %>
            </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
