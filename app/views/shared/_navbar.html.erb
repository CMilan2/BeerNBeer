<header class="d-flex justify-content-between py-2 position-fixed bg-none w-100 px-2 index-9"
        data-controller="navbar"
        data-navbar-target="header">
  <h3><%= link_to "BrewUp", root_path, class:"bebas text-uppercase fw-bold body-color nav-link text-decoration-none body-color" %></h3>

  <ul class="d-flex gap-2 align-items-center">
    <li class="list-unstyled">
      <%= link_to 'Brewery', beers_path(anchor: 'targetSection'), class: "nav-link s text-decoration-none body-color" %>
    </li>
    <li class="list-unstyled">
      <%= link_to 'Beers', beers_path(anchor: 'targetSection'), { class: "nav-link s text-decoration-none body-color" } %>
    </li>

    <% if user_signed_in? %>
      <li class="list-unstyled d-flex gap-2 align-items-center">
        <%= link_to "Profile", user_path(current_user), { class:"nav-link s text-decoration-none body-color" } %>
        <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class:"nav-link s text-decoration-none body-color" %>
      </li>
    <% else %>
      <li class="list-unstyled d-flex gap-2 align-items-center">
        <%= link_to "Sign Up", new_user_registration_path, { class: "nav-link s text-decoration-none body-color" } %>
        <%= link_to "Login", new_user_session_path, { class: "nav-link s text-decoration-none body-color" } %>
      </li>
    <% end %>
  </ul>
</header>
